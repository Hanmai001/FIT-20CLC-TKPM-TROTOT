<div class="content m-5">
    {{!-- forms --}}
    {{!-- form appointment --}}
    <form action="/tenant/add-appointment/{{post.TinID}}" method="post" id="post-appointment"
        class="modal-appointment-confirm">
        <div class="modal__container d-flex flex-column justify-content-between">
            <div class="modal__container-header border-bottom">
                <div class="d-flex justify-content-between">
                    <h5>ĐẶT LỊCH HẸN</h5>
                    <i id="btn-close" class="fas fa-times"></i>
                </div>
            </div>
            <div class="modal__input-item">
                <label class="d-block mb-2" for="fullname">Họ tên<span style="color:red">*</span></label>
                <input type="text" id="fullname" name="fullname" placeholder="Nhập họ tên người đặt hẹn" value=""
                    required>
                <div class="text-danger content__note" id="fullname-note">
                    Vui lòng nhập họ tên
                </div>
            </div>
            <div class="modal__input-item">
                <label class="d-block mb-2" for="phone">Số điện thoại<span style="color:red">*</span></label>
                <input type="text" id="phone" name="phone" placeholder="Nhập số điện thoại người đặt hẹn" value=""
                    required>
                <div class="text-danger content__note" id="phone-note">
                    Vui lòng nhập số điện thoại
                </div>
            </div>
            <div class="modal__input-item">
                <label class="d-block mb-2" for="date">Ngày hẹn gặp<span style="color:red">*</span></label>
                <input type="date" id="date" name="date" value="" required>
                <div class="text-danger content__note" id="date-note">
                    Vui lòng chọn ngày gặp
                </div>
            </div>
            <div class="modal__input-item">
                <label class="d-block mb-2" for="time">Thời gian cụ thể<span style="color:red">*</span></label>
                <input type="time" id="time" name="time" value="" required>
                <div class="text-danger content__note" id="time-note">
                    Vui lòng chọn thời gian cụ thể
                </div>
            </div>
            <div class="modal__container-btns text-end pb-2">
                <button type="submit" form="post-appointment" id="btn-confirm-del">Đặt lịch</button>
                <button id="btn-confirm-cancel">Hủy</button>
            </div>
        </div>
    </form>
    {{!-- form report --}}
    <div id="report-form" style="display: none;">
        <h2>Báo cáo vi phạm</h2>
        <form action="/tenant/add-report/{{post.TinID}}" method="post">
            <label for="violation-description">Mô tả chi tiết:</label>
            <textarea id="violation-description" name="description" required></textarea>
            <br>
            <button type="submit">Gửi báo cáo</button>
            <button type="button" id="cancel-report" style="margin-left:10px; background-color: #002ffe">Hủy</button>
        </form>
    </div>
    <div class="infor" style="background-color: white; padding:80px; box-shadow: 4px 2px 10px rgba(0, 0, 0, 0.2); ">
        <h1 style="font-size:xx-large">Chi tiết Phòng Trọ</h1>
        <div class="row">
            <div class="col-9 picture">
                {{!-- image --}}
                <div class="col pic-product p-3" style="overflow: hidden;">
                    <div class="image" style="height: 355px; overflow: hidden;">
                        <img src="{{ image.[0].ChiTietHinhAnh }}" alt="" style="">
                    </div>

                    <div class="extra-pics mt-2">
                        <i class="fa-solid fa-angle-left"></i>
                        {{#each image}}
                        <img src="{{ this.ChiTietHinhAnh}}" alt="">
                        {{/each}}
                        <i class="fa-solid fa-angle-right"></i>
                    </div>

                    <div class="action-buttons">
                        <button class="report-btn" id="btn-report-form"><i class="fa-solid fa-flag"
                                style="color: #ffffff;"></i> Báo
                            cáo</button>
                        <div id="add-favourite">
                            <button id="btn-add-favourite" class="like-btn"><i class="fa-solid fa-heart"
                                    style="color: #ffffff;"></i> Thêm vào danh sách yêu thích</button>
                        </div>
                    </div>
                </div>
            </div>
            {{!-- landllord info --}}
            <div class="col-3" style="margin-top:15px;">
                <div class="author-aside">
                    <figure class="author-avatar"><img src="{{ author.avatar }}"></figure>
                    <span class="author-post">Được đăng bởi</span>
                    <span class="author-name">{{ author.HoTen }}</span> <!-- Hiển thị tên người đăng -->
                    <div style="min-height: 16px; margin-bottom: 10px;">
                        <div class="author-online-status online" author_id="">
                            <i class="fa-solid fa-circle" style="color: #45fd21;"></i>
                            <span>
                                Đang hoạt động
                            </span>
                        </div>
                    </div>
                    <a class="btn author-phone" rel="nofollow" href="tel:{{ author.SDT }}">
                        <i></i> {{ author.SDT }}</a> <!-- Hiển thị số điện thoại người đăng -->
                </div>
                <div>
                    <button id="btn-open-form" class="btn-booking">Đặt lịch</button>
                </div>
            </div>
        </div>
    </div>
    {{!-- info --}}
    <br>
    <div class="description" style="background-color:white; padding:20px; box-shadow:4px 2px 10px rgba(0, 0, 0, 0.2);">
        <h2>Thông tin chung</h2>
        <li><strong>Địa chỉ:</strong> {{post.DiaChi}}</i>
        <li><strong>Diện tích:</strong> {{post.DienTich}}m²</i>
        <li><strong>Giá thuê:</strong> {{post.Gia}} VNĐ/tháng</i>
        <li><strong>Người đăng tin:</strong> {{post.NguoiDangTin}}</i>
        <li><strong>Ngày đăng tin:</strong> {{formatDate post.NgayDang}}</i>
        <li><strong>Trạng thái kiểm duyệt:</strong> {{post.TrangThaiKiemDuyet}}</i>
        <li><strong>Số người ở:</strong> {{post.SoNguoi}}</i>
        <li><strong>Tiền nước:</strong> {{post.TienNuoc}} VNĐ/m3</i>
        <li><strong>Tiền điện:</strong> {{post.TienDien}} VNĐ/kWh</i>
            <h2>Tiện nghi và mô tả</h2>
            <ul>
                {{#each utilities}}
                <li>{{this.Ten}}</li>
                {{/each}}
            </ul>
            <h2>Bản đồ vị trí</h2>
            <div id="map"></div>
    </div>
    {{!-- related --}}
    <br>
    <div class="relate" style="background-color:white; padding:20px; box-shadow:4px 2px 10px rgba(0, 0, 0, 0.2);">
        <h2>Các phòng trọ liên quan</h2>
        <div class="related-rooms">
            {{#each relate}}
            <a href="/post/details/{{this.TinID}}" class="room">
                <div class="images"
                    style=" position: relative;background-size: cover !important;width: 250px;height: 175px;display: inline-block; display:block; margin:-5px">
                    <img src="{{this.Hinhanh}}" alt="">
                </div>
                <h3>{{this.Ten}}</h3>
                <p>{{this.DiaChi}}</p>
                <p>{{this.DienTich}}</p>
                <p style="color:red">{{this.Gia}}</p>
                <p style="color:rgb(139, 139, 139)">{{formatDate this.NgayDang}}</p>
            </a>
            {{/each}}
        </div>
    </div>

    <br>
    <div class="description" style="background-color:white; padding:20px; box-shadow:4px 2px 10px rgba(0, 0, 0, 0.2);">
        <h2>Đánh giá</h2>
        <div class="list-review">
            {{#each review}}
            <div class="review row py-4 border-bottom">
                <div class="col-2 text-center">
                    <img src="{{this.avatar}}" alt="" class="" style=";width: 30%;height: 100%;">
                </div>
                <div class="col-10 text-start" style="margin-left: -50px;">
                    <span class="name">{{this.HoTen}}</span>
                    <p>Điểm đánh giá: {{this.DiemDanhGia}}/10 - Ngày đánh giá:{{formatDate this.NgayDang}}</p>
                    <p class="comment">{{this.ChiTietDanhGia}}</p>

                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>
