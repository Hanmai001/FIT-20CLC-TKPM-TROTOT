<div class="container" style="margin-top: 10px;">
    <div class="d-flex align-items-center justify-content-center">
        <div class="col-md-11" style="margin-left: 4px;">
            <form class="search-container" method="GET" action="">
                <div class="input-group">
                    <input class="form-control" type="text" placeholder="Search &#x1F50D;" aria-label="Tìm kiếm"
                        name="q">
                    <button class="btn btn-primary" type="submit">Tìm kiếm</button>
                </div>
            </form>
        </div>
    </div>
    <div class="d-flex align-items-center row justify-content-center" style="">
        <div class="container-fluid text-center d-flex justify-content-start">
            <form class="filter-container d-flex" method="GET" action="" style="margin-bottom: 7px;
                margin-left: 70px;">
                <button class="btn btn-outline-secondary me-1" type="submit">
                    <i class="fas fa-filter"></i> Lọc
                </button>
                <div class="cities me-2">
                    <select class="form-select" name="cities" id="city-select">
                        <option value="" data-text="">--Chọn tỉnh/thành phố--</option>
                    </select>
                </div>
                <div class="district me-2">
                    <select class="form-select" name="district" id="district-select">
                        <option value="" data-text="">--Chọn quận/huyện--</option>
                    </select>
                </div>
                <div class="ward me-2">
                    <select class="form-select" name="ward" id="ward-select">
                        <option value="" data-text="">--Chọn phường/xã--</option>
                    </select>
                </div>
                <div class="prices me-2">
                    <select class="form-select" name="prices" id="price-select">
                        <option value="">&#x1F4B0; --Chọn Giá--</option>
                        <option value="1">&#x1F4B0; Dưới 10 triệu đồng</option>
                        <option value="24">&#x1F4B0; Từ 20-40 triệu đồng</option>
                        <option value="46">&#x1F4B0; Từ 40-60 triệu đồng</option>
                        <option value="6">&#x1F4B0; Trên 60 triệu đồng</option>
                    </select>
                </div>
                <div class="square me-2">
                    <select class="form-select" name="squares" id="square-select">
                        <option value="">&#x25A0; --Chọn Diện Tích--</option>
                        <option value="1">&#x25A0; Dưới 10m2</option>
                        <option value="12">&#x25A0; Từ 10m2-20m2</option>
                        <option value="23">&#x25A0; Từ 20m2-30m2</option>
                        <option value="3">&#x25A0; Trên 30m2</option>
                    </select>
                </div>
            </form>

        </div>
    </div>
</div>
<hr>

<head>
    <style>
        .form-select {
            font-size: 15px;
            /* Kích thước phông chữ */
            padding: 5px 27.5px;
            /* Kích thước padding */
            height: 45px;
            /* Kích thước chiều cao */
        }

        .container {
            margin-top: 10px;
        }

        .row {
            display: flex;
            justify-content: start;
            align-items: center;
        }

        .col-md-11 {
            margin-left: 42px;
        }

        .search-container {
            display: flex;
            align-items: center;
        }

        .search-container .form-control {
            flex: 1;
        }

        .align-items-center {
            display: flex;
            align-items: center;
        }

        .container-fluid {
            display: flex;
            justify-content: flex-start;
            align-items: center;
        }

        .container-fluid .d-flex {
            display: flex;
            flex-wrap: wrap;
            margin-bottom: 7px;
            margin-left: 70px;
        }

        .container-fluid .d-flex .form-select {
            margin-right: 5px;
        }

        /* CSS for responsive design */
        @media (max-width: 768px) {
            .col-md-11 {
                margin-left: 0;
            }

            .search-container {
                flex-direction: column;
                align-items: stretch;
            }

            .search-container .form-control {
                margin-top: 10px;
            }

            .container-fluid .d-flex {
                flex-direction: column;
                align-items: flex-start;
                margin-left: 0;
            }

            .container-fluid .d-flex .form-select {
                margin-right: 0;
                margin-bottom: 5px;
            }
        }
    </style>
</head>