                        <div class="col-6 text-end">
                            <img src="../../public/assets/pictures/people.png" alt="" width="16px" height="16px">
                            {{this.SoNguoi}} người
                        </div>
                    </div>
                    <div class="item__area">
                        <img src="../../public/assets/pictures/area-graph.png" alt="" width="16px" height="16px">
