{{#section "css"}}
<link rel="stylesheet" href="../../public/assets/css/landlord-profile.css" />
<link rel="stylesheet" href="../../public/assets/css/header_landlord.css" />
<link rel="stylesheet" href="../../public/assets/css/sidebar_landlord.css" />
{{/section}}
{{#section "js"}}
<script>
    const fileUploader = document.getElementById('profile-file');
    const reader = new FileReader();
    const imageGrid = document.getElementById('profile-ava');
    $(document).ready(function (e) {
        $.ajax({
            url: "https://provinces.open-api.vn/api/p",
            type: "get", 
            dateType: "json", 

            success: function (result) {
                console.log(result);
                $.each(result, (key, value) => {
                    var item = $('<option value='+ value.code +'>'+ value.name +'</option>');
                    $("#city-select").append(item);
                });
            }
        });
    })

    fileUploader.addEventListener('change', (event) => {
        const files = event.target.files;
        const file = files[0];
        reader.readAsDataURL(file);

        reader.addEventListener('load', (event) => {
            imageGrid.src = event.target.result;
        });
    });
</script>
{{/section}}
<div class="container-fluid landlord-profile">
    {{> header_landlord}}
    {{> sidebar_landlord}}

    <div class="content">
        <div class="content__header mt-4 pb-3 border-bottom">
            <h5>QUẢN LÝ TRANG CÁ NHÂN</h5>
            <div>Quản lý thông tin hồ sơ để bảo mật tài khoản</div>

        </div>
        <div class="card-profile">
            <div class="card-container">
                <div class="body-card row pb-5">
                    <form action="/my-profile/<%= user.id %>/update-info" method="post" class="row"
                        enctype="multipart/form-data">
                        <div class="col-3 avatar text-center">
                            <img class="mt-4" src="https://kenh14cdn.com/2020/3/23/photo-1-15849581918401652775824.jpg" alt=""
                                id="profile-ava">
                            <input type="file" id="profile-file" name="update-ava" hidden>
                            <div class="mt-3">
                                <label for="profile-file">Chọn Ảnh</label>
                            </div>

                        </div>
                        <div class="col-9 details">
                            <div class="mt-4 mb-4">
                                <label for="username-profile">Tên đăng nhập</label>
                                <input class="border-0" type="text" id="username-profile" readonly value="Hân Mai">
                            </div>
                            <div class="mb-4">
                                <label for="fullname-profile">Tên</label>
                                <input type="text" id="fullname-profile" value="" name="updateFullname">
                            </div>
                            <div class="mb-4 address-item">
                                <label for="city-select">Tỉnh/Thành phố</label>
                                <select required name="cities" id="city-select" onfocus='this.size=5;'
                                    onblur='this.size=1;' onchange='this.size=1; this.blur();'>
                                    <option class="text-center" value="">--Chọn Tỉnh/TP--</option>
                                </select>

                            </div>
                            <div class="mb-2">
                                <label for="email-profile">Email</label>
                                <input type="email" id="email-profile" value="giahanmai@gmail.com" readonly>
                            </div>
                            <div class="mb-4">
                                <label></label>
                                <a href="#">Đổi Email</a>
                            </div>
                            <div class="mb-4">
                                <label for="phone-profile">SĐT</label>
                                <input type="text" id="phone-profile" value="" name="updatePhone">
                            </div>
                            
                            <div class="mb-4">
                                <label for="date-birth">Ngày sinh</label>
                                <input type="date" id="date-birth" value="" name="updateBirth">
                            </div>
                            <div class="mb-4">
                                <label for="intro-profile">Giới thiệu</label>
                                <textarea id="intro-profile" name="updateIntro" rows="6"
                                    placeholder="Cho mọi người biết chút về bản thân bạn đi"></textarea>
                            </div>
                            <div class="mb-4 sex-profile">
                                <label>Giới tính</label>
                                <label for="female">Nữ</label>
                                <input type="radio" id="female" name="updateSex" value="female">
                                <label for="male">Nam</label>
                                <input type="radio" id="male" value="male" name="updateSex">
                                <label for="sex-other">Khác</label>
                                <input type="radio" id="sex-other" value="sexOther" name="updateSex">
                            </div>
                        </div>
                        <div class="text-center mt-4">
                            <input class="py-2 px-5" type="submit" value="Lưu">
                        </div>
                    </form>

                </div>
            </div>

        </div>
    </div>
</div>